{
  "name": "reactive-bible",
  "author": "Peymanhc",
  "description": "Divine books",
  "private": true,
  "version": "0.0.0",
  "type": "commonjs",
  "homepage": "https://RealIslamic.github.io/Zeitoon",
  "scripts": {
    "start": "concurrently \"vite --host\" \"npm run start-electron\"",
    "dev": "vite --host",
    "build": "tsc && vite build",
    "start-electron": "wait-on http://localhost:5173 && ELECTRON_START_URL=http://localhost:5173 electron .",
    "postinstall": "electron-builder install-app-deps",
    "electron-pack": "npm run build && electron-builder",
    "preelectron-pack": "npm run build",
    "lint": "eslint \"{src,apps,libs,test}/**/*.tsx\" --fix",
    "format": "prettier --write \"src/**/*.tsx\"",
    "preview": "vite preview",
    "test": "vitest --ui",
    "coverage": "vitest run --coverage",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build"
  },
  "build": {
    "appId": "com.bible",
    "files": [
      "build/**/*",
      "main.js",
      "preload.js"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis",
      "icon": "public/icon.png"
    }
  },
  "dependencies": {
    "@emotion/react": "^11.11.0",
    "@mantine/carousel": "^6.0.11",
    "@mantine/core": "^6.0.11",
    "@mantine/dates": "^6.0.11",
    "@mantine/dropzone": "^6.0.11",
    "@mantine/form": "^6.0.11",
    "@mantine/hooks": "^6.0.11",
    "@mantine/modals": "^6.0.11",
    "@mantine/notifications": "^6.0.11",
    "@mantine/nprogress": "^6.0.11",
    "@mantine/prism": "^6.0.11",
    "@mantine/spotlight": "^6.0.11",
    "@mantine/tiptap": "^6.0.11",
    "@tabler/icons-react": "^2.19.0",
    "@tiptap/extension-link": "^2.0.3",
    "@tiptap/react": "^2.0.3",
    "@tiptap/starter-kit": "^2.0.3",
    "dayjs": "^1.11.7",
    "embla-carousel-react": "^7.1.0",
    "howler": "^2.2.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.1",
    "react-string-replace": "^1.1.1",
    "zustand": "^4.3.8"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/howler": "^2.2.7",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "@vitejs/plugin-react-swc": "^3.0.0",
    "@vitest/coverage-c8": "^0.31.1",
    "@vitest/ui": "^0.31.1",
    "concurrently": "^8.2.2",
    "electron": "^30.1.0",
    "electron-builder": "^24.13.3",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "gh-pages": "^6.1.1",
    "happy-dom": "^9.20.3",
    "prettier": "^3.0.3",
    "prettier-plugin-organize-imports": "^3.2.3",
    "typescript": "^5.0.2",
    "vite": "^4.3.2",
    "vitest": "^0.31.1",
    "wait-on": "^7.2.0"
  }
}
